<div id="product-list">
 <h1>Listing products</h1>
  <table>
  <% for product in @products %>
       <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
       
         <td>
            <%= image_tag product.image_url, :class => 'list-image' %>
         </td>
         
         <td class="list-description">
             <dl>
                <dt><h3><%=h product.title %></h3></dt>
                <dd><%=h truncate(product.description.gsub(/<.*?>/,''),80) %></dd>
              </dl>
         </td>
         
        
         <td class="list-actions">
              <%= link_to '查看', product %><br/>
              <%= link_to  "<img src='/images/icon_edit.gif', border='0' >", edit_product_path(product) %><br/>
              <%= link_to '刪除', product,
                          :confirm => "你確定要刪除商品#{product.title}?",
                          :method => :delete %>
          </td>
      </tr>
  <% end %>
  </table>
</div>

<br />
<%= link_to '新增商品', new_product_path %>
